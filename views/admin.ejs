<html>
    <%- include('./partials/head.ejs') %>

    <body>
        <%- include('./partials/nav.ejs') %>


        <div class="container jumbotron">
                <div class="row"> <h2><u>All Orders </u></h2> </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="box-element">
                            <table class="table">
                                <thead class="thead-dark">
                                  <tr>
                                    <th scope="col">Image</th>
                                    <th scope="col">Seller Name</th>
                                    <th scope="col">Product Name</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Total</th>
                                    <th scope="col">Delivery Address</th>
                                  </tr>
                                </thead>
                                
                            
                            <% for (let order of orders){ %>
                                <tbody>
                                    <tr>
                                      <th scope="row"><img src="<%=order.image_url%>" style="width: 130px; height: 130; object-fit: cover;"></th>
                                      <td><%=order.username%></td>
                                      <td><%=order.p_name%></td>
                                      <td><%=order.price%></td>
                                      <td><%=order.quantity%></td>
                                      <td><%=order.total%></td>
                                      <td><%=order.h_add%>, <%=order.city%>, <%=order.pincode%></td>
                                   
                                    </tr>
                                </tbody>
                                
                                
                                <% } %>
                               
            
                            </table>
                            
                        
            
                        </div>
            
                        
                    </div>
                    
                        
                </div>
            </div>


            <div class="container">
                <h2>All Products</h2>
                <div class="row">
                
                <% for (let product of products){ %>
                    
                    <div class="col-lg-4">
                        <img class="thumbnail" style="image-orientation: inherit; object-fit: cover;" src="<%=product.image_url%>" alt = "image here">
                        <div class="box-element product">
                            <h6><strong> <%= product.p_name%> </strong></h6>
                            <hr>
            
                            <% if(!sess.isLoggedIn){ %> 
                                <a class="btn btn-outline-success" href="/login">View</a>
                               <% } else{ %>
                                <form action="/admin" method="post">
                                    
                                    <div class="form-group col-md-4">
                                      <button type="submit"  data-action="add" class="btn btn-outline-secondary add-btn update-cart">Delete Item</button> 
                                  <input type="hidden" name="productId" value="<%= product.p_id %>">
                                    </div>
                                  
                              </form>
                      <% } %>
                            
                            
                            <h4 style="display: inline-block;float: right;"><strong>Rs.<%= product.price %></strong></h4>
            
                        </div>
                    </div>
                    <% } %>
                </div>
                </div>

    </body>
    </html>